extends layout.jade

block content
  h1 Title
    form(id='signup' method='POST' action='/auth/signup')
      label(for='signup_username') Username
      input(type='text' id='signup_username' name='signup_username')
      label(for='signup_email') Email
      input(type='email' id='signup_email' name='signup_email')
      label(for='signup_password') Password
      input(type='text' id='signup_password' name='signup_password')
      label(for='signup_password2') Password2
      input(type='text' id='signup_password2' name='signup_password2')
      button Sign Up
    hr
    form(id='login' method='POST' action='/auth/login')
      label(for='login_email') Email
      input(type='email' id='login_email' name='email')
      label(for='login_password') Password
      input(type='text' id='login_password' name='password')
      button Log in
    a(href='/auth/logout') Log Out
    a(href='/auth/twitter') Sign in with Twitter
    input(type='text' id='location' class='map-controls' name='location')
  div(id='map')
  script(src='https://code.jquery.com/jquery-2.1.4.min.js')
  script(type='text/javascript' src='/socket.io/socket.io.js')
